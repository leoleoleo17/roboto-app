#: import SlideTransition kivy.uix.screenmanager.SlideTransition

<Caja@MDFillRoundFlatIconButton>:
    md_bg_color: 0.1992, 0.6602, 0.7070, 1
    icon: ''
    text: ''
    theme_text_color: 'Custom'
    text_color: 1,1,1,1
    theme_icon_color: "Custom"
    icon_color: 0, 0, 0, 1
    font_size:'15sp'
        

<ui>:
    MDScreen:
        id: screen_principal
        name: 'screen_principal' #pantalla principal(inicio)
        md_bg_color: 0.1992, 0.6602, 0.7070, 1 #color en rgba

        MDBoxLayout:
            orientation: 'vertical'
            padding: '50px'

            MDLabel:
                text: "¡Bienvenido a Roboto!"
                halign: 'center'
                pos_hint: {'center_y': .5}
                theme_text_color: 'Custom' #para poder cambiarle el color y el estilo
                text_color: 1,1,1,1
                font_style: 'H5'

            Image:
                source: "images/mano_robot.png"
                size_hint: .85, .85
                pos_hint: {'center_x': .5}
            
            MDLabel:
                text: "El espacio donde aprender lenguaje de señas está al alcance de tu mano"
                halign: 'justify'
                pos_hint: {'center_y': .5}
                theme_text_color: 'Custom'
                text_color: 1,1,1,1
                font_style: 'Subtitle1'
            
            MDFillRoundFlatButton: #un tipo de botón
                text: '¡EMPIEZA YA!'
                theme_text_color: 'Custom'
                text_color: 1,0.6758,.0938,1
                md_bg_color: 1,1,0.149, 1
                pos_hint: {'center_x': .5}
                on_release:
                    app.root.current= 'menu'
                    app.root.transition = SlideTransition(direction='right')
    
    MDScreen: #PENDIENTE!!!!
        id: menu
        name: 'menu' #pantalla menu
        md_bg_color: 0.1992, 0.6602, 0.7070, .2 #color en rgba
        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {'center_x': 0.09,'center_y': .95}
            theme_icon_color: "Custom"
            icon_color: 0.1992, 0.6602, 0.7070, 1
            on_release:
                app.root.current = 'screen_principal'
                app.root.transition = SlideTransition(direction = 'left')
        MDBoxLayout:
            orientation: 'vertical'
            padding: ['10dp', '10dp', '10dp', '280px']
            FloatLayout:
                canvas:
                    Color:
                        rgba: 0.1992, 0.6602, 0.7070, .2
                    Ellipse:
                        pos: -15, 400
                        size: 300 , 200
                        angle_start: 0
                        angle_end: 360
                MDLabel:
                    text: '¿QUÉ QUIERES HACER?'
                    halign: 'center'
                    pos_hint: {'center_x': .5, 'center_y': .75}
                    theme_text_color: 'Custom' #para poder cambiarle el color y el estilo
                    text_color: .9529,.6549,.2157,1
                    font_style: 'H5'
            
        Caja:
            pos_hint: {'center_x':.5, 'center_y': .6}
            text: 'Conoce un \n poco de historia'
            icon: 'book'
        Caja:
            pos_hint: {'center_x':.5, 'center_y': .48}
            text: 'Conoce el \n abecedario'
            icon: 'glasses'
        Caja:
            text: 'Experimenta \n creando un mensaje'
            pos_hint: {'center_x': .5, 'center_y': .36}
            on_release:
                app.root.current = 'escribir_mensaje'
                app.root.transition = SlideTransition(direction = 'right')
            icon: 'pencil'        
        Caja:
            pos_hint: {'center_x':.5, 'center_y': .24}
            text: 'Conoce más sobre\n la lengua de señas'
            icon: 'hand-extended'
        MDIconButton:
            icon: 'information'
            pos_hint: {"center_x": .91, "center_y": .05}
            theme_icon_color: "Custom"
            icon_color: 0.1992, 0.6602, 0.7070, 1
            
                    

    MDScreen:
        id: escribir_mensaje
        name: 'escribir_mensaje'
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {'center_x': 0.09,'center_y': .95}
            theme_icon_color: "Custom"
            icon_color: 0.1992, 0.6602, 0.7070, 1
            on_release:
                app.root.current = 'menu'
                app.root.transition = SlideTransition(direction = 'left')
        MDBoxLayout:
            orientation: 'vertical'
            padding: ['10dp', '10dp', '10dp', '280px']
            FloatLayout:
                canvas:
                    Color:
                        rgba: 0.1992, 0.6602, 0.7070, .2
                    Ellipse:
                        pos: -15, 400
                        size: 300 , 200
                        angle_start: 0
                        angle_end: 360
            MDLabel:
                text: "ESCRIBE TU\nMENSAJE\n\n\n\n\n\n"
                halign: 'center'
                pos_hint: {'center_y': 1}
                theme_text_color: 'Custom' #para poder cambiarle el color y el estilo
                text_color: .0235, .5686, .5255, 1
                font_style: 'H5'
            MDTextField:
                id: mensaje
                mode: 'fill'
                radius: [15,15,15,15]
                helper_text: 'Escribe un mensaje'
                helper_text_mode: 'persistent'
                active_line: True
                max_text_length: 160 #sugerido, para que el mensaje no sea tan largo
                on_text_validate: app.root.textInput(self)
                font_size: '14dp'
                #Color de la linea
                line_color_normal: .0235, .5686, .5255, 1
                line_color_focus: .0235, .5686, .5255, 1
                #Color del texto
                text_color_normal: 0, 0, 0, .5
                text_color_focus: 0, 0, 0, .5
                helper_text_color_normal: 0, 0, 0, .5
                helper_text_color_focus: 0, 0, 0, .5
                #Color de fondo
                fill_color_normal: .9647, .9647, .9647, 1 #pendiente

        MDFillRoundFlatButton:
            text: 'ENVIAR'
            pos_hint: {'center_x': .5, 'center_y':.25}
            theme_text_color: 'Custom'
            text_color: 1,1,1,1
            md_bg_color: .0235, .5686, .5255, 1
            on_release:
                app.root.textInput(mensaje)
        MDLabel:
            text: '*Recuerda que tu mensaje no va a ser\n traducido directamente a lengua de señas,\n sino que se va a deletrear cada letra.'
            halign: 'left'
            pos_hint: {'center_y': 0.09, 'center_x':0.56}
            theme_text_color: 'Custom' #para poder cambiarle el color y el estilo
            text_color: 0, 0, 0, .5
            font_style: 'Caption'
                